pipeline {
     agent any
     
     stages {
         
         stage("install apache pkg") {
             sshagent (credentials: ['user'])
             steps{
                 sh 'sudo apt-get install apache2 -y'
             }
         }
         
         stage("Display apache2 status") {
             steps{
                 sh 'service apache2 status'
             }
         }
         
    }     
   }
    
